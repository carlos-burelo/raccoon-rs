fn calculateCircleArea(radius: float): float {
    return PI * pow(radius, 2.0)
}

log("\n=== Circle Area Calculation ===")
let radius: float = 5.0
log("Circle with radius", radius, "has area:", calculateCircleArea(radius))


fn calculateDistance(x1: float, y1: float, x2: float, y2: float): float {
    let dx: float = x2 - x1
    let dy: float = y2 - y1
    return sqrt(pow(dx, 2.0) + pow(dy, 2.0))
}

log("\n=== Distance Calculation ===")
let dist: float = calculateDistance(0.0, 0.0, 3.0, 4.0)
log("Distance between (0,0) and (3,4):", dist)

