export fn min(a: int, b: int): int {
    if (a < b) {
        return a
    }
    return b
}

export fn abs(n: int): int {
    if (n < 0) {
        return -n
    }
    return n
}

export fn clamp(value: int, minVal: int, maxVal: int): int {
    if (value < minVal) {
        return minVal
    }
    if (value > maxVal) {
        return maxVal
    }
    return value
}
