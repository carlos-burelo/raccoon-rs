


export fn add(a: int, b: int): int {
    return a + b
}

export fn multiply(a: int, b: int): int {
    return a * b
}


export let version: str = "1.0.0"
export let PI: float = 3.14159


export class Calculator {
    value: int

    constructor(initial: int) {
        this.value = initial
    }

    add(n: int): int {
        this.value = this.value + n
        return this.value
    }

    multiply(n: int): int {
        this.value = this.value * n
        return this.value
    }

    reset(): void {
        this.value = 0
    }
}


export enum Status {
    Pending,
    Active,
    Completed,
    Failed
}


