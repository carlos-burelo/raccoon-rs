import { sqrt as core_sqrt } from "std:runtime"



export class Point {
    x: float
    y: float

    constructor(x: float, y: float) {
        this.x = x
        this.y = y
    }

    distance(other: Point): float {
        let dx: float = this.x - other.x
        let dy: float = this.y - other.y
        return core_sqrt(dx * dx + dy * dy)
    }
}

export fn calculateArea(width: float, height: float): float {
    return width * height
}

export fn calculatePerimeter(width: float, height: float): float {
    return 2.0 * (width + height)
}


class Shape {
    name: str

    constructor(name: str) {
        this.name = name
    }

    describe(): str {
        return "Shape: " + this.name
    }
}

export default Shape
