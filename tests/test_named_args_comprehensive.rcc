print("Test 2: Valores por defecto");
fn createUser(name: str, age: int = 18, active: bool = true): void {
    print("Name:", name, "Age:", age, "Active:", active);
}

createUser(name: "Alice");
createUser(name: "Bob", age: 25);
createUser(name: "Charlie", active: false);
createUser(name: "Diana", age: 30, active: false);
print("");


print("Test 3: Mezcla de posicionales y nombrados");
fn bookFlight(origin: str, destination: str, flightDate: str, flightClass: str = "economy"): void {
    print("From:", origin, "To:", destination, "Date:", flightDate, "Class:", flightClass);
}

bookFlight("Madrid", "Barcelona", "2024-01-15");
bookFlight("Madrid", "Barcelona", "2024-01-15", "business");
bookFlight("Madrid", destination: "Barcelona", flightDate: "2024-01-15");
print("");


print("Test 4: Funciones con retorno");
fn calculate(a: int, b: int, operation: str = "add"): int {
    if (operation == "add") {
        return a + b;
    } else if (operation == "multiply") {
        return a * b;
    }
    return 0;
}

let result1 = calculate(a: 5, b: 3);
print("5 + 3 =", result1);

let result2 = calculate(a: 5, b: 3, operation: "multiply");
print("5 * 3 =", result2);

let result3 = calculate(5, 3, operation: "multiply");
print("5 * 3 =", result3);
print("");


print("Test 5: Diferentes tipos de datos");
fn formatMessage(text: str, repeat: int, uppercase: bool): str {
    let msg = uppercase ? text.toUpper() : text;
    let result = "";
    for (let i = 0; i < repeat; i = i + 1) {
        result = result + msg + " ";
    }
    return result;
}

let msg1 = formatMessage(text: "hello", repeat: 3, uppercase: true);
print("Message 1:", msg1);

let msg2 = formatMessage(repeat: 2, text: "world", uppercase: false);
print("Message 2:", msg2);
print("");


