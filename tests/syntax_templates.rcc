print("Test 7: Templates in Functions")

fn greet(name: str, age: int): str {
    return `Hello ${name}, you are ${age} years old`
}

print(greet("Alice", 28))





print("Test 8: Object Properties")

class Person {
    name: str
    age: int
    
    constructor(name: str, age: int) {
        this.name = name
        this.age = age
    }
    
    introduce(): str {
        return `My name is ${this.name} and I'm ${this.age}`
    }
}

let person: Person = new Person("Bob", 35)
print(person.introduce())





