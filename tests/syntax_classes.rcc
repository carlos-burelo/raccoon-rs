print("Test 1: Basic Class")

class Person {
    name: str
    age: int
    
    constructor(name: str, age: int) {
        this.name = name
        this.age = age
    }
}

let person: Person = new Person("Alice", 30)
print(`Name: ${person.name}`)
print(`Age: ${person.age}`)





print("Test 2: Class Methods")

class Calculator {
    value: int
    
    constructor(initial: int) {
        this.value = initial
    }
    
    add(n: int): void {
        this.value = this.value + n
    }
    
    getValue(): int {
        return this.value
    }
}

let calc: Calculator = new Calculator(10)
print(`Initial: ${calc.getValue()}`)
calc.add(5)
print(`After add(5): ${calc.getValue()}`)





print("Test 3: Multiple Methods")

class Counter {
    count: int
    
    constructor() {
        this.count = 0
    }
    
    increment(): void {
        this.count = this.count + 1
    }
    
    decrement(): void {
        this.count = this.count - 1
    }
    
    reset(): void {
        this.count = 0
    }
    
    getCount(): int {
        return this.count
    }
}

let counter: Counter = new Counter()
counter.increment()
counter.increment()
print(`After 2 increments: ${counter.getCount()}`)
counter.decrement()
print(`After 1 decrement: ${counter.getCount()}`)





print("Test 4: String Fields")

class Book {
    title: str
    author: str
    pages: int
    
    constructor(title: str, author: str, pages: int) {
        this.title = title
        this.author = author
        this.pages = pages
    }
    
    getInfo(): str {
        return this.title + " by " + this.author
    }
}

let book: Book = new Book("1984", "Orwell", 328)
print(book.getInfo())
print(`Pages: ${book.pages}`)





print("Test 5: Boolean Fields")

class Light {
    isOn: bool
    
    constructor() {
        this.isOn = false
    }
    
    toggle(): void {
        this.isOn = !this.isOn
    }
    
    getStatus(): str {
        if (this.isOn) {
            return "ON"
        } else {
            return "OFF"
        }
    }
}

let light: Light = new Light()
print(`Status: ${light.getStatus()}`)
light.toggle()
print(`After toggle: ${light.getStatus()}`)





print("Test 6: Array Fields")

class Classroom {
    students: str[]
    
    constructor() {
        this.students = []
    }
    
    addStudent(name: str): void {
        this.students.push(name)
    }
    
    getCount(): int {
        return this.students.length
    }
}

let classroom: Classroom = new Classroom()
classroom.addStudent("Alice")
classroom.addStudent("Bob")
print(`Student count: ${classroom.getCount()}`)





print("Test 7: Method Return Values")

class Rectangle {
    width: int
    height: int
    
    constructor(w: int, h: int) {
        this.width = w
        this.height = h
    }
    
    area(): int {
        return this.width * this.height
    }
    
    perimeter(): int {
        return 2 * (this.width + this.height)
    }
}

let rect: Rectangle = new Rectangle(5, 3)
print(`Area: ${rect.area()}`)
print(`Perimeter: ${rect.perimeter()}`)





print("Test 8: Inheritance")

class Animal {
    name: str
    
    constructor(name: str) {
        this.name = name
    }
    
    speak(): str {
        return "Some sound"
    }
}

class Dog extends Animal {
    breed: str
    
    constructor(name: str, breed: str) {
        super(name)
        this.breed = breed
    }
    
    speak(): str {
        return "Woof!"
    }
}

let dog: Dog = new Dog("Rex", "Labrador")
print(`Dog name: ${dog.name}`)
print(`Breed: ${dog.breed}`)
print(`Sound: ${dog.speak()}`)





print("Test 9: Methods with Parameters")

class MathCalculator {
    value: int
    
    constructor() {
        this.value = 0
    }
    
    max(a: int, b: int): int {
        if (a > b) {
            return a
        }
        return b
    }
    
    min(a: int, b: int): int {
        if (a < b) {
            return a
        }
        return b
    }
}

let math: MathCalculator = new MathCalculator()
print(`max(10, 20): ${math.max(10, 20)}`)
print(`min(10, 20): ${math.min(10, 20)}`)





