

print("=== Testing Function Parameters ===")


print("\n1. Basic parameters")
fn basic(a: int, b: str): str {
    return b + " " + a
}
print(basic(42, "Answer:"))


print("\n2. Default parameters")
fn withDefaults(name: str, greeting: str = "Hello", times: int = 1): str {
    return greeting + " " + name + "!"
}
print(withDefaults("Alice"))
print(withDefaults("Bob", "Hi"))
print(withDefaults("Charlie", "Hey", 2))


print("\n3. Variadic parameters")
fn sum(...numbers: int[]): int {
    let total: int = 0
    for (let i = 0; i < numbers.length; i = i + 1) {
        total = total + numbers[i]
    }
    return total
}
print(sum(1, 2, 3, 4, 5))
print(sum(10, 20))


print("\n4. Mix regular + variadic")
fn format(prefix: str, ...items: str[]): str {
    let result: str = prefix + ": "
    for (let i = 0; i < items.length; i = i + 1) {
        if (i > 0) {
            result = result + ", "
        }
        result = result + items[i]
    }
    return result
}
print(format("Items", "apple", "banana", "cherry"))


print("\n5. Defaults + variadic")
fn greet(greeting: str = "Hello", ...names: str[]): str {
    let result: str = greeting
    for (let i = 0; i < names.length; i = i + 1) {
        result = result + " " + names[i]
    }
    return result
}
print(greet("Hi", "Alice", "Bob", "Charlie"))
print(greet("Welcome", "Dave"))


print("\n6. Arrow functions with variadic")
let multiply = (...nums: int[]): int => {
    let product: int = 1
    for (let i = 0; i < nums.length; i = i + 1) {
        product = product * nums[i]
    }
    return product
}
print(multiply(2, 3, 4))


print("\n7. Array destructuring")
fn coords([x, y]: int[]): str {
    return "x=" + x + ", y=" + y
}
print(coords([10, 20]))

print("\n=== All Parameter Tests Passed ===")
