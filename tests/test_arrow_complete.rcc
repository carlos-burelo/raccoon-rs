
print("=== ARROW FUNCTIONS TEST ===");
print("");


print("1. Arrow function with map:");
let numbers = [1, 2, 3, 4, 5];
let doubled = numbers.map((x) => x * 2);
print("Doubled:", doubled);
print("");


print("2. Arrow function with filter:");
let evens = numbers.filter((n) => n % 2 == 0);
print("Even numbers:", evens);
print("");


print("3. Arrow function with reduce:");
let sum = numbers.reduce((acc, n) => acc + n, 0);
print("Sum:", sum);
print("");


print("4. Arrow function with type annotations:");
let squared = numbers.map((n: int) => n * n);
print("Squared:", squared);
print("");


print("5. Method chaining:");
let result = numbers
    .filter((n) => n > 2)
    .map((n) => n * 10);
print("Filtered > 2, then * 10:", result);
print("");


print("6. Arrow function as variable:");
let triple = (x) => x * 3;
let tripled = numbers.map(triple);
print("Tripled:", tripled);
print("");

print("=== ALL TESTS PASSED ===");
