print("Test 12: Using Imported Types")

fn processCalculator(calculator: Calculator): int {
    calculator.add(10)
    calculator.multiply(2)
    return calculator.value
}

let testCalc = new Calculator(5)
print("  processCalculator result:", processCalculator(testCalc))
print("  ✓ Imported types in function signatures working\n")




print("Test 13: Complex Operations with Imported Classes")

fn calculateTrianglePerimeter(p1: Point, p2: Point, p3: Point): float {
    let side1: float = p1.distance(p2)
    let side2: float = p2.distance(p3)
    let side3: float = p3.distance(p1)
    return side1 + side2 + side3
}

let point1 = new Point(0.0, 0.0)
let point2 = new Point(3.0, 0.0)
let point3 = new Point(0.0, 4.0)
print("  Triangle perimeter:", calculateTrianglePerimeter(point1, point2, point3))
print("  ✓ Complex operations with imports working\n")




