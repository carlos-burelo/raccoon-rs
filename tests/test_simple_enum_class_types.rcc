


class User {
    name: str;
    age: int;

    constructor(name: str, age: int) {
        this.name = name;
        this.age = age;
    }

    greet(): void {
        print("Hello, I'm " + this.name);
    }
}


let user: User = new User("Alice", 30);
user.greet();


fn greetUser(u: User): void {
    u.greet();
}

greetUser(user);


let admin: User = new User("Admin", 99);
admin.greet();


type MaybeUser = User?;
let optionalUser: MaybeUser = user;
print("Optional user created");


type UserInfo = {
    user: User,
    active: bool
};

print("Class as type tests completed!");
