print("\n=== Testing String Built-ins ===");

let text: str = "Hello World";
print(StringUtils.upper(text));  
print(StringUtils.lower(text));  
print(StringUtils.trim("  spaces  ")); 


print(StringUtils.charAt("Raccoon", 0));     
