print("\n=== Testing Array Built-ins ===");

let numbers: int[] = [1, 2, 3];
ArrayUtils.push(numbers, 4);
print(len(numbers)); 

let last = ArrayUtils.pop(numbers); 
print(last);    
print(len(numbers)); 

ArrayUtils.unshift(numbers, 0);
print(len(numbers)); 

let first = ArrayUtils.shift(numbers); 
print(first);   
print(len(numbers)); 

ArrayUtils.reverse(numbers);
print(len(numbers)); 

