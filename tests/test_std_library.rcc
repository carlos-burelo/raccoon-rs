log("\n[5] Aplicación: Teorema de Pitágoras")
fn pythagoras(a: float, b: float): float {
    return sqrt(pow(a, 2.0) + pow(b, 2.0))
}

let side_a: float = 3.0
let side_b: float = 4.0
let hypotenuse: float = pythagoras(side_a, side_b)
log("   Catetos: a =", side_a, ", b =", side_b)
log("   Hipotenusa: c =", hypotenuse)




