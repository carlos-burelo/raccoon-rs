console.log("\n[5] Aplicación: Teorema de Pitágoras")
fn pythagoras(a: float, b: float): float {
    return Math.sqrt(Math.pow(a, 2.0) + Math.pow(b, 2.0))
}

let side_a: float = 3.0
let side_b: float = 4.0
let hypotenuse: float = pythagoras(side_a, side_b)
console.log("   Catetos: a =", side_a, ", b =", side_b)
console.log("   Hipotenusa: c =", hypotenuse)




