console.log("\n[9] Función geométrica con std:math")

fn calculateCircle(radius: float): void {
    let area: float = Math.PI * Math.pow(radius, 2.0)
    let circumference: float = 2.0 * Math.PI * radius
    
    console.log("   Radio:", radius)
    console.log("   Área:", area)
    console.log("   Circunferencia:", circumference)
}

calculateCircle(5.0)




