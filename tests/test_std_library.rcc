log("\n[9] Función geométrica con std:math")

fn calculateCircle(radius: float): void {
    let area: float = PI * pow(radius, 2.0)
    let circumference: float = 2.0 * PI * radius
    
    log("   Radio:", radius)
    log("   Área:", area)
    log("   Circunferencia:", circumference)
}

calculateCircle(5.0)




