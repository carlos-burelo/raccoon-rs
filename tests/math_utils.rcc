


export fn add(a: int, b: int): int {
    return a + b;
}

export fn subtract(a: int, b: int): int {
    return a - b;
}

export fn multiply(a: int, b: int): int {
    return a * b;
}

export fn divide(a: float, b: float): float {
    if (b == 0.0) {
        throw "Division by zero";
    }
    return a / b;
}


export const PI: float = 3.14159;
export const E: float = 2.71828;


export class Calculator {
    result: float;

    constructor() {
        this.result = 0.0;
    }

    add(value: float): Calculator {
        this.result = this.result + value;
        return this;
    }

    subtract(value: float): Calculator {
        this.result = this.result - value;
        return this;
    }

    multiply(value: float): Calculator {
        this.result = this.result * value;
        return this;
    }

    divide(value: float): Calculator {
        if (value == 0.0) {
            throw "Division by zero";
        }
        this.result = this.result / value;
        return this;
    }

    getResult(): float {
        return this.result;
    }

    reset(): void {
        this.result = 0.0;
    }
}


fn privateHelper(x: int): int {
    return x * 2;
}


export { PI as Pi, E as Euler };


export default fn calculate(operation: str, a: float, b: float): float {
    if (operation == "add") {
        return a + b;
    } else if (operation == "subtract") {
        return a - b;
    } else if (operation == "multiply") {
        return a * b;
    } else if (operation == "divide") {
        if (b == 0.0) {
            throw "Division by zero";
        }
        return a / b;
    } else {
        throw "Unknown operation: " + operation;
    }
}
