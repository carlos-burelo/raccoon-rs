enum Status {
    Pending = 0,
    Active = 1,
    Completed = 2,
    Failed = 3
}


class User {
    name: str;
    age: int;

    constructor(name: str, age: int) {
        this.name = name;
        this.age = age;
    }

    greet(): void {
        print("Hello, I'm " + this.name);
    }
}


let currentStatus: Status;
currentStatus = Status.Pending;
print(currentStatus);


let user: User = new User("Alice", 30);
user.greet();


fn processStatus(status: Status): void {
    print("Processing status:");
    print(status);
}

processStatus(Status.Active);


fn greetUser(u: User): void {
    u.greet();
}

greetUser(user);


let nextStatus: Status = Status.Completed;
print(nextStatus);


let admin: User = new User("Admin", 99);
admin.greet();


type UserOrStatus = User | Status;
let mixed: UserOrStatus = user;
mixed = Status.Failed;


type TaskInfo = {
    assignee: User,
    status: Status,
    title: str
};

print("All enum and class type tests completed!");
